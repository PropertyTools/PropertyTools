<Page x:Class="ControlsDemo.EnumMenuItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf" mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="EnumMenuItem">
        <DockPanel>
        <Menu DockPanel.Dock="Top">
            <p:EnumMenuItem SelectedValue="{Binding FavouriteFruit}" Header="Select"/>
        </Menu>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding FavouriteFruit, StringFormat='Selected: {0}'}"/>
        </Grid>
    </DockPanel>
</Page>
