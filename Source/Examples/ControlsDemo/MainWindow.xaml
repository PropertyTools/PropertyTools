<Window x:Class="ControlsDemo.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="ControlsDemo" Height="480" Width="640">
    <Window.Resources>
        <XmlDataProvider x:Key="samples" Source="Examples.xml" />
    </Window.Resources>
    <DockPanel DataContext="{Binding  Source={StaticResource samples}, XPath=Examples/Example}">
        <ListBox Width="160" DockPanel.Dock="Left" ItemsSource="{Binding}" DisplayMemberPath="@Title" IsSynchronizedWithCurrentItem="True"/>
        <Slider DockPanel.Dock="Bottom" x:Name="ScaleSlider" Value="1" Minimum="1" Maximum="3" Margin="8" Width="180" />
        <Frame Source="{Binding XPath=@Page}" VerticalAlignment="Center" NavigationUIVisibility="Hidden" Focusable="false">
            <Frame.LayoutTransform>
                <ScaleTransform ScaleX="{Binding Value, ElementName=ScaleSlider}" ScaleY="{Binding Value, ElementName=ScaleSlider}" />
            </Frame.LayoutTransform>
        </Frame>
    </DockPanel>
</Window>