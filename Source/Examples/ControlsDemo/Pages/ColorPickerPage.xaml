<Page x:Class="ControlsDemo.ColorPickerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:p="clr-namespace:PropertyEditorLibrary;assembly=PropertyEditor" mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ColorPickerPage">
    <StackPanel Width="200">
        <p:ColorPicker SelectedColor="{Binding Color}" ShowAsHex="True" Margin="4"/>
        <p:ColorPicker SelectedColor="{Binding Brush}" Margin="4"/>
    </StackPanel>
</Page>
