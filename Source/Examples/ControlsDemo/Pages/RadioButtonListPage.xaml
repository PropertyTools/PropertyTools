<Page x:Class="ControlsDemo.RadioButtonListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:p="clr-namespace:PropertyEditorLibrary;assembly=PropertyEditor" mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="RadioButtonListPage">
    <StackPanel Width="200">
        <p:RadioButtonList Value="{Binding SelectedFruit}" Margin="10"/>
        <TextBox Text="{Binding SelectedFruit}" Margin="10"/>
        <Button Content="Change" Width="80" Click="Change_Click"/>
    </StackPanel>
</Page>
