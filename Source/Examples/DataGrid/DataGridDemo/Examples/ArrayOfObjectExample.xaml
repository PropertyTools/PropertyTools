<Window x:Class="DataGridDemo.ArrayOfObjectExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        Title="object[]" Height="450" Width="300"
        FocusManager.FocusedElement="{Binding ElementName=grid1}">
    <Grid>
        <p:DataGrid x:Name="grid1" ItemsSource="{Binding ItemsSource}" WrapItems="True">
            <p:DataGrid.ColumnDefinitions>
                <p:ColumnDefinition HorizontalAlignment="Center" Width="1*"/>
                <p:ColumnDefinition HorizontalAlignment="Center" Width="1*"/>
            </p:DataGrid.ColumnDefinitions>
        </p:DataGrid>
    </Grid>
</Window>
