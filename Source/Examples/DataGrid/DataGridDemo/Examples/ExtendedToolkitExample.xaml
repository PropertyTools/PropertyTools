<Window x:Class="DataGridDemo.ExtendedToolkitExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        xmlns:extendedToolkit="clr-namespace:PropertyTools.Wpf.ExtendedToolkit;assembly=PropertyTools.Wpf.ExtendedToolkit"
        Title="Extended Toolkit controls" Height="450" Width="900">
    <Grid>
        <p:DataGrid ItemsSource="{Binding Items}">            
            <p:DataGrid.ControlFactory>
                <extendedToolkit:ExtendedToolkitDataGridControlFactory />
            </p:DataGrid.ControlFactory>
        </p:DataGrid>
    </Grid>
</Window>
