<Window x:Class="DataGridDemo.ListOfVectorExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        Title="List&lt;Vector3D&gt;" Height="450" Width="400">
    <Grid>
        <p:DataGrid ItemsSource="{Binding ItemsSource}">
            <p:DataGrid.ColumnDefinitions>
                <p:ColumnDefinition Header="Vector" FormatString="0.000" HorizontalAlignment="Center" Width="1*"/>
            </p:DataGrid.ColumnDefinitions>
        </p:DataGrid>
    </Grid>
</Window>
