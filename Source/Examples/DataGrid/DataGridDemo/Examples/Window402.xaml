<Window x:Class="DataGridDemo.Window402"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        Title="double[] WrapItems" Height="450" Width="300"
        FocusManager.FocusedElement="{Binding ElementName=grid1}">
    <Grid>
        <p:DataGrid x:Name="grid1" ItemsSource="{Binding ItemsSource}" WrapItems="true">
            <p:DataGrid.ColumnDefinitions>
                <p:ColumnDefinition Header="A" HorizontalAlignment="Center" Width="*"/>
                <p:ColumnDefinition Header="B" HorizontalAlignment="Center" Width="*"/>
                <p:ColumnDefinition Header="C" HorizontalAlignment="Center" Width="*"/>
            </p:DataGrid.ColumnDefinitions>
        </p:DataGrid>
    </Grid>
</Window>
