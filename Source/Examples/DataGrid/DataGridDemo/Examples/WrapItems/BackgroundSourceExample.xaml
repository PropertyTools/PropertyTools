<Window x:Class="DataGridDemo.BackgroundSourceExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        Title="BackgroundSource (WrapItems=true)" Height="450" Width="300">
    <Grid>
        <p:DataGrid ItemsSource="{Binding ItemsSource}" BackgroundSource="{Binding BackgroundSource}" WrapItems="true">
            <p:DataGrid.ColumnDefinitions>
                <p:ColumnDefinition Header="A" HorizontalAlignment="Center" Width="*"/>
                <p:ColumnDefinition Header="B" HorizontalAlignment="Center" Width="*"/>
                <p:ColumnDefinition Header="C" HorizontalAlignment="Center" Width="*"/>
            </p:DataGrid.ColumnDefinitions>
        </p:DataGrid>
    </Grid>
</Window>
