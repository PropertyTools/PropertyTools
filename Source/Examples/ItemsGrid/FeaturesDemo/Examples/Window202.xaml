<Window x:Class="FeaturesDemo.Window202"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        xmlns:local="clr-namespace:FeaturesDemo" 
        Title="List&lt;PlainObject&gt;" Height="450" Width="900"
        FocusManager.FocusedElement="{Binding ElementName=grid1}">
    <Window.Resources>
        <local:ViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <p:ItemsGrid x:Name="grid1" ItemsSource="{Binding Items200}">
            <p:ItemsGrid.ColumnDefinitions>
                <p:ColumnDefinition PropertyName="String"/>
                <p:ColumnDefinition PropertyName="Integer"/>
                <p:ColumnDefinition PropertyName="Enum"/>
                <p:ColumnDefinition PropertyName="Selector"/>
            </p:ItemsGrid.ColumnDefinitions>
        </p:ItemsGrid>
    </Grid>
</Window>
