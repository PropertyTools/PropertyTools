<Window x:Class="ViewModelDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pt="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf" 
        xmlns:System="clr-namespace:System;assembly=mscorlib" Title="ViewModelDemo" Height="500" Width="400">
    <StackPanel Margin="8">
        <!--<StackPanel.LayoutTransform>
            <ScaleTransform ScaleX="2" ScaleY="2"/>
        </StackPanel.LayoutTransform>
        -->
        <GroupBox Header="Property editor" Padding="8">
            <pt:PropertyEditor SelectedObject="{Binding Person}" PropertyStateProvider="{Binding PropertyStateProvider}">
                <pt:PropertyEditor.ErrorTemplate>
                    <DataTemplate>
                        <Rectangle Width="12" Height="12" RadiusX="2" RadiusY="2" Fill="Red" ToolTip="{Binding}"/>
                    </DataTemplate>
                </pt:PropertyEditor.ErrorTemplate>
                <pt:PropertyEditor.WarningTemplate>
                    <DataTemplate>
                        <Ellipse Width="12" Height="12" Fill="YellowGreen" ToolTip="{Binding}"/>
                    </DataTemplate>
                </pt:PropertyEditor.WarningTemplate>
            </pt:PropertyEditor>
        </GroupBox>
        <GroupBox Header="WPF data binding" x:Name="group1" Padding="8" Margin="0 12 0 0">
            <StackPanel DataContext="{Binding Person}">
                <TextBox Text="{Binding Name, ValidatesOnDataErrors=True}" Margin="4"/>
                <TextBox Text="{Binding Height, ValidatesOnDataErrors=True}" Margin="4"/>
                <TextBox Text="{Binding Age, ValidatesOnDataErrors=True}" Margin="4"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
