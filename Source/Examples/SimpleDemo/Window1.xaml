<Window x:Class="FeaturesDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pe="clr-namespace:PropertyEditorLibrary;assembly=PropertyEditor"
    xmlns:local="clr-namespace:FeaturesDemo" 
    Title="SimpleDemo" Width="400" Height="720">
    <Window.Resources>
        <local:Person x:Key="Person1" FirstName="Anders" 
                      LastName="Andersen" BirthDate="01.01.1974" 
                      Age="35" Gender="Male" Weight="70kg"
                      HairColor="Brown"
                      FavouriteBrush="#804636f8"
                      Car="Toyota"
                      History="Lorem ipsum dolor sit amet."
                      />
    </Window.Resources>

    <DockPanel>
        <Button DockPanel.Dock="Bottom" Content="Show values" Click="Show_Click" Width="80" HorizontalAlignment="Center" Margin="8"/>
        <pe:PropertyEditor Margin="8" x:Name="editor1" SelectedObject="{StaticResource Person1}"/>
    </DockPanel>

</Window>
