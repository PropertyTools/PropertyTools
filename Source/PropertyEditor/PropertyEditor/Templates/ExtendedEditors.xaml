<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:clr="clr-namespace:System;assembly=mscorlib"	
	xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    xmlns:ms="clr-namespace:Microsoft.Samples.CustomControls"
    xmlns:local="clr-namespace:OpenControls">

    <!-- CLR & Custom Types Data Templates -->

    <!-- System.Windows.Media.Color -->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:PropertyEditor}, ResourceId={x:Type media:Color}}">
        <!-- 
        Microsoft ColorPicker Sample
        http://msdn.microsoft.com/en-us/library/ms771620.aspx
        <ms:ColorPicker SelectedColor="{Binding Value}"/>
        -->
        <local:ColorPicker SelectedColor="{Binding Value}"/>
    </DataTemplate>

    <!-- System.Windows.Media.Brush -->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:PropertyEditor}, ResourceId={x:Type media:Brush}}">
        <local:ColorPicker SelectedColor="{Binding Value, Converter={local:BrushToColorConverter}}"/>
    </DataTemplate>


</ResourceDictionary>