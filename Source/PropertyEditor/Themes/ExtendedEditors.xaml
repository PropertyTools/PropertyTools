<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:clr="clr-namespace:System;assembly=mscorlib"	
	xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    xmlns:local="clr-namespace:OpenPropertyEditor">

    <!-- CLR & Custom Types Data Templates -->

    <!-- System.Windows.Media.Color -->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:PropertyEditor}, ResourceId={x:Type media:Color}}">
        <DataTemplate.Resources>
            <local:ColorToBrushConverter x:Key="ColorToBrush"/>
        </DataTemplate.Resources>
        <StackPanel Orientation="Horizontal">
            <Button Width="120" Height="24">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="16" Height="16" Fill="{Binding Value, Converter={StaticResource ColorToBrush}}" Stroke="Black"/>
                    <TextBlock Text="{Binding Value}" Margin="10 0 0 0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </DataTemplate>
    
