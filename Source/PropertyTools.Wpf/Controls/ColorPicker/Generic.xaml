                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:PropertyTools.Wpf"
                    xmlns:converters="clr-namespace:PropertyTools.Wpf"
                    xmlns:themes="clr-namespace:Microsoft.Windows.Themes">

